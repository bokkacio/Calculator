<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:orientation="horizontal">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3">
        <TextView
                android:layout_width="wrap_content"
                android:text="New Text"
                android:id="@+id/txtFirst"
                android:layout_gravity="left|center_vertical"
                android:layout_height="wrap_content"/>
        <TextView
                android:layout_width="wrap_content"
                android:text="New Text"
                android:id="@+id/txtSecond"
                android:layout_height="wrap_content" android:layout_gravity="right"/>
        <TextView
                android:layout_width="wrap_content"
                android:text="New Text"
                android:id="@+id/txtEqual"
                android:layout_gravity="left|center_vertical"
                android:layout_height="wrap_content"/>
        <ImageView xmlns:android="http://schemas.android.com/apk/res/android"
                   android:id="@+id/icon"
                   android:layout_width="fill_parent"
                   android:layout_height="fill_parent"
                   android:adjustViewBounds="true"
                   android:src="@drawable/molecule"/>
    </LinearLayout>

    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >
        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
            <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/but_1"
                    android:id="@+id/but_1" android:layout_column="0"/>
            <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/but_2"
                    android:id="@+id/but_2" android:layout_column="1"/>
            <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/but_3"
                    android:id="@+id/but_3" android:layout_column="2"/>

        </TableRow>
        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/but_4"
                    android:id="@+id/but_4" android:layout_column="0"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/but_5"
                    android:id="@+id/but_5" android:layout_column="1"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/but_6"
                    android:id="@+id/but_6" android:layout_column="2"/>
        </TableRow>
        <TableRow
                android:layout_width="fill_parent"

                android:layout_height="fill_parent">

            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/but_7"
                    android:id="@+id/but_7" android:layout_column="0"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/but_8"
                    android:id="@+id/but_8" android:layout_column="1"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/but_9"
                    android:id="@+id/but_9" android:layout_column="2"/>
        </TableRow>
        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/but_0"
                    android:id="@+id/but_0" android:layout_column="0"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/but_plus"
                    android:id="@+id/but_plus" android:layout_column="1"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/but_minus"
                    android:id="@+id/but_minus" android:layout_column="2"/>

        </TableRow>
        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
            <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="@string/but_equal"
                    android:id="@+id/but_equal" android:layout_column="0" android:layout_span="3"/>

        </TableRow>
    </TableLayout>
</LinearLayout>

